<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="button" Content="Ввод" FontSize="18" VerticalAlignment="Top" Height="45" Width="180" BorderBrush="Black" BorderThickness="2,2,1,2" Click="button_Click"/>
        <Button x:Name="button1" Content="Вычисления" Margin="180,0,0,0" FontSize="18" VerticalAlignment="Top" Width="180" Height="45" BorderBrush="Black" BorderThickness="1,2,1,2" Click="button1_Click"/>
        <Button x:Name="button2" Content="Выход" FontSize="18" Margin="360,0,0,0" VerticalAlignment="Top" Width="180" Height="45" BorderBrush="Black" BorderThickness="1,2,2,2" Click="button2_Click"/>
    </Grid>
</Page>
